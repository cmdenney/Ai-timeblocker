# Environment Configuration
NODE_ENV=development

# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/callback/google
GITHUB_CLIENT_ID=your-github-client-id-here
GITHUB_CLIENT_SECRET=your-github-client-secret-here

# Google Calendar API
GOOGLE_CALENDAR_API_KEY=your-google-calendar-api-key-here
GOOGLE_WEBHOOK_SECRET=your-webhook-secret-here
GOOGLE_WEBHOOK_URL=https://yourdomain.com/api/calendar/webhook

# OpenAI Integration
OPENAI_API_KEY=your-openai-api-key-here

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url-here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/ai_timeblocker
DATABASE_URL_DIRECT=postgresql://username:password@localhost:5432/ai_timeblocker

# AI/ML Services
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# External Services
GOOGLE_CALENDAR_API_KEY=your-google-calendar-api-key-here
GOOGLE_CALENDAR_CLIENT_ID=your-google-calendar-client-id-here
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-calendar-client-secret-here

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password-here

# Analytics
GOOGLE_ANALYTICS_ID=your-ga-id-here

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_DEBUG_MODE=true
